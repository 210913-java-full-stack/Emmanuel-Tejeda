SELECT *
FROM customer_personal_information AS cpi
INNER JOIN customer_bank_info AS cbi
	ON cpi.customer_id = cbi.customer_id
INNER JOIN customer_bank_accounts AS cba 
	ON cba.bank_id = cbi.bank_id

